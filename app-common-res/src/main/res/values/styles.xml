<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="ErrorButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/darkRed</item>
        <item name="colorControlHighlight">@color/lightRed</item>
    </style>

</resources>